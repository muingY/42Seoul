{
    "version": "2.0.0",
    "runner": "terminal",
    "type": "shell",
    "echoCommand": true,
    "presentation": {
        "reveal": "always"
    },
    "tasks": [
        {
            "label": "build",
            "command": "g++",
            "args": [
                "-g3",
                //"${file}/",
                "${fileDirname}/ircserv.cpp",
                "${fileDirname}/Utils/LogTool.cpp",
                "${fileDirname}/Utils/NetSupportUtil.cpp",
                "${fileDirname}/Utils/CommQueue.cpp",
                "${fileDirname}/Utils/KeyInputTool.cpp",
                "${fileDirname}/NetCore/NetCore.cpp",
                "${fileDirname}/IRCCore/IRCCore.cpp",
                "${fileDirname}/IRCCore/ProcessFuncs.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "execute",
            "command": "cd ${fileDirname} &&./${fileBasenameNoExtension}",
            "group": "test"
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "ircserv.cpp Utils/LogTool.cpp Utils/NetSupportUtil.cpp Utils/CommQueue.cpp Utils/KeyInputTool.cpp NetCore/NetCore.cpp IRCCore/IRCCore.cpp IRCCore/ProcessFuncs.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}