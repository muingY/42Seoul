{
    "version": "2.0.0",
    "runner": "terminal",
    "type": "shell",
    "echoCommand": true,
    "presentation": {
        "reveal": "always"
    },
    "tasks": [
        {
            "label": "build",
            "command": "gcc",
            "args": [
                "-g3",
                "main.c",
                "philo.c",
                "philocontrol1.c",
                "philocontrol2.c",
                "util1.c",
                "util2.c",
                "-o",
                "philo",
                "-lpthread"
            ],
            "group": "build",
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "execute",
            "command": "cd ${fileDirname} &&./${fileBasenameNoExtension}",
            "group": "test"
        },
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "philo",
                "-lpthread"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}